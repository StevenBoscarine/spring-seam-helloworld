<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.0"
	xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="
        http://java.sun.com/xml/ns/persistence
        http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">
	<persistence-unit name="spring-seam-helloworld">
		<!-- Using the example datasource set up by JBoss AS 7 For your application, 
			set up a managed datasource and use that instead -->

		<!-- Uncomment to use the default one provided by JBoss AS7/EAP6 -->
		<!-- <jta-data-source>java:jboss/datasources/ExampleDS</jta-data-source> -->

		<!-- Use the DataSource created by seam-spring-helloworld-ds.xml -->
		<jta-data-source>java:jboss/datasources/seam-spring-helloworldDS</jta-data-source>
		<properties>
			<!-- Allows Hibernate to create tables from the entity bean definition. -->
			<!-- You'd want to avoid this in production settings. -->
			<property name="hibernate.hbm2ddl.auto" value="create-drop" />
			<!-- Shows SQL generated by Hibernate.  Set to false in production as this has a slight performance penalty. -->
			<property name="hibernate.show_sql" value="true" />
		</properties>
	</persistence-unit>
</persistence>